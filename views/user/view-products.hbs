

  <section>
    <div class="container mt-5">
      <div class="row">
        {{#each product}}
        <div class="col-md-3 mt-2">
          <div class="card" style="width: 15rem;height:40rem">
            <img src="../product-images/{{this._id}}.jpg" class="card-img-top" alt="..."
            style="height: 20rem;"
            >
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{this.name}}</h5>
              <p class="card-text">{{this.Category}}</p>
              <p class="card-text">{{this.discription}}</p>
              <p class="card-text">{{this.price}}</p>
              
              <button onclick="addToCart('{{this._id}}')" class="btn btn-primary mt-auto" >Add to cart</button>
            </div>
          </div>
        </div>
       {{/each}}
      </div>
    </div>
  </section>
  